<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Agenda de Contatos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container d-flex justify-content-between">
            <a class="navbar-brand" href="/">Agenda</a>
            
            <div>
                <a class="btn btn-light me-2" href="/contatos">Contatos</a>

                <% if (typeof usuarioId !== "undefined" && usuarioId) { %>
                    <a class="btn btn-danger" href="/logout">Sair</a>
                    
                <% } else { %>
                    <a class="btn btn-primary me-2" href="/login">Login</a>
                    <a class="btn btn-success" href="/registro">Registrar</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container">
        <%- body %>
    </div>
</body>
</html>
