<%- include("layout", { body: `
<h1>Editar Contato</h1>
<form action="/contatos/${contato._id}/editar" method="POST">
    <div class="mb-3">
        <label>Nome</label>
        <input type="text" name="nome" value="${contato.nome}" class="form-control" required>
    </div>
    <div class="mb-3">
        <label>Telefone</label>
        <input type="text" name="telefone" value="${contato.telefone}" class="form-control" required>
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input type="email" name="email" value="${contato.email || ""}" class="form-control">
    </div>
    <button class="btn btn-primary">Atualizar</button>
</form>
`}) %>
